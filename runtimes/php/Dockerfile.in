ARG PHPQA_DOCKER_IMAGE=jakzal/phpqa:1.41-alpine

#include "../../Dockerfile"

FROM ${PHPQA_DOCKER_IMAGE} AS builder

FROM generator AS runtime
RUN apk add --no-cache \
        php7-cli \
        php7-curl \
        php7-dom \
        php7-iconv \
        php7-json \
        php7-mbstring \
        php7-openssl \
        php7-phar \
        php7-simplexml \
        php7-tokenizer \
        php7-xml \
        php7-xmlwriter
COPY --from=builder /tools /tools
COPY --from=builder /usr/bin/composer /tools
ENV COMPOSER_HOME=/tools/.composer
